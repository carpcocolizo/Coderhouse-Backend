doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
      if productos == true
      h1 Vista de Productos
        <table style="width: 50%">
          each producto in productos
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Foto</th>
            </tr>
            <tr>
              td=producto.title
              td=producto.price
              td
                img(src=producto.thumbnail)
              
            </tr>
        </table>
        
      if productos == false
          h2 No hay productos
      <a href="/">Cargar Productos</a>